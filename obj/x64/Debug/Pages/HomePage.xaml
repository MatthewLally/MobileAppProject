<Page
    x:Class="MobileAppProject.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MobileAppProject.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel Grid.Row="0" Margin="0,17,0,28" HorizontalAlignment="Center">
            <TextBlock Text="Galway Soccer Guide" Margin="0,-7,0,0" FontSize="30"/>
        </StackPanel>

        <Grid x:ConnectionId='2' x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" >
                <Image x:ConnectionId='9' Name="GalwayImage" Source="Assets\GalwayImage.jpg" />
                <TextBlock x:ConnectionId='10' Name="InfoTxt"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           Text="Welcome to the Galway soccer guide, please click on of the links to view information on the teams currently playing football in Galways five junior football divisons and view the locations of the clubs!" />
            </StackPanel>

            <StackPanel Width="400" Orientation="Vertical" Grid.Row="0">
                <Button x:ConnectionId='3' Name="PremierDivison"  Margin="100,0,0,0" Content="View Premier Division"                       />
                <Button x:ConnectionId='4' Name="DivisonOne" Margin="100,0,0,0" Content="View Divison One"                         />
                <Button x:ConnectionId='5' Name="DivisonTwo" Margin="100,0,0,0" Content="View Divison Two"                         />
                <Button x:ConnectionId='6' Name="DivisonThree" Margin="100,0,0,0" Content="View Divison Three"                           />
                <Button x:ConnectionId='7' Name="DivisonFour" Margin="100,0,0,0" Content="View Divison Four"                          />


                <Frame x:ConnectionId='8' Name="MyFrame">

                </Frame>


            </StackPanel>
        </Grid>
    </Grid>

</Page>

